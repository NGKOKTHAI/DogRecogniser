<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More">

    <include
        android:id="@+id/include"
        layout="@layout/menu_top"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-68dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_logo3"
                android:layout_width="129dp"
                android:layout_height="124dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/paw_drop_round" />

            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="About Us "
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tv_aboutus2"
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Dog Recogniser is an Android mobile application which is able to recognise dog breeds by scanning image uploaded by user."
                android:textSize="20dp" />

            <ListView
                android:id="@+id/list"
                android:layout_width="301dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>