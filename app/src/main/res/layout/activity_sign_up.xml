<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="19dp"
        android:text="Sign Up"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ed_signupusername"
        app:layout_constraintStart_toStartOf="@+id/iv_logo2"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo2" />

    <Button
        android:id="@+id/btn_signup2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="14dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_conpassword" />

    <EditText
        android:id="@+id/ed_signupusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_signupemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup" />

    <EditText
        android:id="@+id/ed_signuppassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/ed_conpassword"
        app:layout_constraintStart_toStartOf="@+id/ed_signupemail"
        app:layout_constraintTop_toBottomOf="@+id/ed_signupemail" />

    <EditText
        android:id="@+id/ed_signupemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/ed_signuppassword"
        app:layout_constraintStart_toStartOf="@+id/ed_signupusername"
        app:layout_constraintTop_toBottomOf="@+id/ed_signupusername" />

    <EditText
        android:id="@+id/ed_conpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_signup2"
        app:layout_constraintStart_toStartOf="@+id/ed_signuppassword"
        app:layout_constraintTop_toBottomOf="@+id/ed_signuppassword" />

    <Button
        android:id="@+id/btn_login2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup2" />

    <ImageView
        android:id="@+id/iv_logo2"
        android:layout_width="149dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paw_round_corner" />

</androidx.constraintlayout.widget.ConstraintLayout>