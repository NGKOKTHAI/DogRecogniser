<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <include
        android:id="@+id/include"
        layout="@layout/top_toolbar_icon" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#FF9800"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/btn_signup2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="501dp" />

    <EditText
        android:id="@+id/ed_signupusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/ed_signuppassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="388dp" />

    <EditText
        android:id="@+id/ed_signupemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="335dp" />

    <EditText
        android:id="@+id/ed_signconpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/btn_login2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="18sp"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="561dp" />

    <ImageView
        android:id="@+id/iv_logo2"
        android:layout_width="152dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/paw_drop"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="96dp" />

</androidx.constraintlayout.widget.ConstraintLayout>